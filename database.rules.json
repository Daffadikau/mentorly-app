{
  "rules": {
    "mentors": {
      ".read": true,
      "$uid": {
        ".read": true,
        ".write": true
      }
    },
    "pelajar": {
      ".read": true,
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid || root.child('admin').child(auth.uid).exists()"
      }
    },
    "admin": {
      ".read": true,
      ".write": true,
      ".indexOn": ["username"]
    },
    "jadwal": {
      ".read": true,
      "$mentorUid": {
        ".read": true,
        ".write": "auth != null",
        "$jadwalId": {
          ".read": true,
          ".write": "auth != null"
        }
      }
    },
    "kelas": {
      ".read": true,
      ".write": "auth != null",
      "$kelasId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "bookings": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["pelajar_id", "mentor_id", "status"],
      "$bookingId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "chat_rooms": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "fcm_tokens": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "calls": {
      "$callId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
